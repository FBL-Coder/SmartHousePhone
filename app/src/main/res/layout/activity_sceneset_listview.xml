<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:layout_margin="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="安防类型："
            android:gravity="center"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/safety_type"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:background="@drawable/save_click_selector"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <GridView
        android:id="@+id/parlour_gv"
        style="@style/GridViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"></GridView>

    <TextView
        android:id="@+id/sceneSetSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/selector_network_blue_sure"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="保存"
        android:textColor="@color/white1"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />
</LinearLayout>
