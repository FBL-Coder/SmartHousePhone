<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_773BAFDA"
    android:paddingBottom="@dimen/dp_2"
    android:paddingTop="@dimen/dp_2"
    android:paddingRight="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/text666"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/air_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="你家空调我的"
                android:textColor="@color/viewfinder_laser"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="状态"
                android:textColor="@color/text666"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/air_state"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="打开"
                android:textColor="@color/black1"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="模式"
                android:textColor="@color/text666"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/air_mode"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="制冷"
                android:textColor="@color/black1"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/air_switch"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:src="@drawable/on"
            android:gravity="center"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="风速"
                android:textColor="@color/text666"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/air_speed"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="高风"
                android:textColor="@color/black1"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="当前温度"
                android:textColor="@color/text666"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/air_temp_now"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="25"
                android:textColor="@color/black1"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="设置温度"
                android:textColor="@color/text666"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/air_temp_set"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/black1"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/air_set_mode"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/selector_login"
            android:gravity="center"
            android:text="模式"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/air_set_speed_add"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/selector_login"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:text="风速+"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/air_set_speed_min"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/selector_login"
            android:gravity="center"
            android:text="风速-"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/air_set_temp_add"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/selector_login"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:text="温度+"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/air_set_temp_min"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/selector_login"
            android:gravity="center"
            android:text="温度-"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

</LinearLayout>
