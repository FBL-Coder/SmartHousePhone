<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@color/main_border2"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/Control_GridView_Item_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="asdasdad"
        android:textColor="@color/black1"
        android:textSize="@dimen/dp_16" />

    <ImageView
        android:id="@+id/Control_GridView_Item_IV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@id/Control_GridView_Item_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/curtains_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/select_curtain_open_click" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/select_curtain_stop_click" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/select_curtain_close_click" />
    </LinearLayout>

</LinearLayout>
