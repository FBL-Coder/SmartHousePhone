<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/color_ECF0F7">

    <TextView
        android:id="@+id/Control_GridView_Item_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="asdasdad"
        android:textColor="@color/black1"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/Control_GridView_Item_IV"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@+id/Control_GridView_Item_Name"
        android:layout_centerHorizontal="true" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/Control_GridView_Item_Slide"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/Control_GridView_Item_IV"
        android:layout_centerHorizontal="true"
        app:rsb_cellMode="other"
        app:rsb_cells="4"
        app:rsb_max="9"
        app:rsb_progressHintMode="alwaysHide"
        app:rsb_hintBGHeight="@dimen/dp_28"
        app:rsb_lineColorEdge="@color/colorAccent"
        app:rsb_lineColorSelected="@color/color_10AEFF"
        app:rsb_markTextArray="@array/wordsArray"
        app:rsb_seekBarHeight="@dimen/dp_8"
        app:rsb_seekBarMode="single"
        app:rsb_textPadding="@dimen/sp_16"
        app:rsb_textSize="@dimen/sp_12"
        app:rsb_thumbSize="@dimen/sp_26" />

</RelativeLayout>
