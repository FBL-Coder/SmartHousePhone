<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <cn.etsoft.smarthome.view.ViewPagerCompat
            android:id="@+id/home_fragemnt_vp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@drawable/tu5">

        </cn.etsoft.smarthome.view.ViewPagerCompat>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <!--&lt;!&ndash;退出&ndash;&gt;-->
            <ImageView
                android:id="@+id/home_isConnect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:text="当前模块："
                android:textColor="@color/color_4FC1E9"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/net_now"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:padding="@dimen/dp_3"
                android:text="上海展厅"
                android:textColor="@color/color_10AEFF"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/home_tv_ref"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_ref" />

            <ImageView
                android:id="@+id/home_logout"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:padding="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/logout_icon" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_loaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loaction" />

            <TextView
                android:id="@+id/loaction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位"
                android:textColor="@color/white1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_50"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView_banner"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="19dp"
                android:paddingRight="@dimen/dp_10"
                android:text="当前房间"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_12"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/ll_home_dots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_50"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_10">


                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:src="@drawable/temp"/>
                    <TextView
                        android:id="@+id/home_temp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_10AEFF"
                        android:text="200"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:src="@drawable/humidity"/>
                    <TextView
                        android:id="@+id/home_hum"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_10AEFF"
                        android:text="200"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:src="@drawable/pm_25"/>
                    <TextView
                        android:id="@+id/home_pm25"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_10AEFF"
                        android:text="200"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:background="@color/color_8000">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/temp" />

                <TextView
                    android:id="@+id/temp_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/humidity" />

                <TextView
                    android:id="@+id/hum_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/pm_25" />

                <TextView
                    android:id="@+id/pm_25"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/kqzb" />

                <TextView
                    android:id="@+id/breath_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/weather" />

                <TextView
                    android:id="@+id/weather_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dilan"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_user"
            style="@style/BottomRadioButtonStyle"
            android:drawableTop="@drawable/selector_user"
            android:text="@string/home_user" />

        <RadioButton
            android:id="@+id/rb_home_home"
            style="@style/BottomRadioButtonStyle"
            android:drawableTop="@drawable/selector_home"
            android:text="@string/home_page" />

        <RadioButton
            android:id="@+id/rb_home_setting"
            style="@style/BottomRadioButtonStyle"
            android:drawableTop="@drawable/selector_setting"
            android:text="@string/setting" />
    </RadioGroup>
</LinearLayout>
