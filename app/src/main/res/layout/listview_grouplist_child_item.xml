<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_1_5"
        android:layout_marginTop="@dimen/dp_1_5"
        android:background="@color/color_96c9e7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50">

        <ImageView
            android:id="@+id/grouplist_iv_icon"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/light_icon" />

        <TextView
            android:id="@+id/grouplist_tv_title"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="3"
            android:lines="1"
            android:gravity="center"
            android:maxLength="6"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/grouplist_tv_test"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="3"
            android:background="@color/main_blue1"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/grouplist_iv_editname"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
