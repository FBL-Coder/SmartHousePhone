<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1.3"
        android:background="@drawable/tu2"
        android:orientation="vertical"
        >
        <include layout="@layout/title_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.5"
            android:padding="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/safety_match_code"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="0.5"
                android:background="@drawable/selector_red_down_match"
                android:gravity="center"
                android:text="对码"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="选择布防类型"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/safety_type"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="0.7"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/more"
                android:gravity="center"
                android:paddingRight="@dimen/dp_5"
                android:text="选择类型"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:padding="@dimen/dp_2"
            android:layout_weight="0.5"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/safety_all_close"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginLeft="-10dp"
                android:layout_weight="0.6"
                android:background="@drawable/selector_red_down_match"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="全部撤防"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/safety_all_open"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginLeft="-10dp"
                android:layout_weight="0.6"
                android:background="@drawable/selector_red_down_match"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="全部布防"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.5"
            android:padding="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                android:text="安防名称"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/safety_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="0.8"
                android:background="@color/color_10AEFF"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:textStyle="bold"
                android:textColor="@color/color_fff"
                android:textColorHint="@color/white1"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="使能"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/safety_enabled"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="0.6"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/more"
                android:gravity="center"
                android:paddingRight="@dimen/dp_5"
                android:text="禁用"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/add_dev_safety"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="0.5"
                android:background="@color/color_8AB928"
                android:gravity="center"
                android:text="添加设备"
                android:textStyle="bold"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:padding="@dimen/dp_2"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="状态"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/safety_state"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="0.8"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/more"
                android:gravity="center"
                android:paddingRight="@dimen/dp_5"
                android:text="选择状态"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="关联情景"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/safety_scene"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="0.8"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/more"
                android:gravity="center"
                android:paddingRight="@dimen/dp_5"
                android:text="选择情景"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:orientation="vertical"
        android:layout_weight="2.5">

        <GridView
            android:id="@+id/gridView_safety"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:clipToPadding="true"
            android:horizontalSpacing="@dimen/dp_10"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dp_10" />
        <LinearLayout
            android:id="@+id/add_dev_Layout_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1.5"
            android:background="@color/color_DCDCDC"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="未添加设备列表"
                android:textColor="@color/color_898C92"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="设备房间"
                    android:textColor="@color/color_898C92"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_equipment_parlour"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/save_click_selector"
                    android:drawableRight="@drawable/more"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <ListView
                android:id="@+id/equipment_loyout_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"></ListView>

            <TextView
                android:id="@+id/equipment_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_click_selector"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>