<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_60"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_blue1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:src="@drawable/back"
                android:padding="@dimen/dp_5"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dev_info_title"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="8"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/dev_delete"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="删除"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="@color/color_FF3B30"
                android:textSize="@dimen/dp_14"
                />
        </LinearLayout>


        <ImageView
            android:id="@+id/dev_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:padding="@dimen/dp_15"
            android:background="@color/white1"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_1"
            android:background="#eee">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="设备名称 :" />

            <EditText
                android:id="@+id/dev_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/color_000"
                android:textColorHint="@color/color_565656"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="#eee">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="设备房间 :" />

            <TextView
                android:id="@+id/dev_room"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="#eee">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="设备通道 :" />

            <TextView
                android:id="@+id/dev_way"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/white1">

            <TextView
                android:id="@+id/dev_test"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/save_click_selector"
                android:gravity="center"
                android:text="测  试"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/dev_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/save_click_selector"
                android:gravity="center"
                android:text="保 存 修 改"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
