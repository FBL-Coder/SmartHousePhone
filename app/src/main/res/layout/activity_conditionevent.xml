<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1.3"
        android:background="@drawable/tu2"
        android:orientation="vertical"
        >
        <include layout="@layout/title_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:padding="@dimen/dp_2"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="触发器名称"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_fff"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColorHint="@color/main_border2"
                android:background="@color/color_10AEFF"
                android:gravity="center"
                android:textColor="@color/color_fff"
                android:padding="@dimen/dp_5" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:text="启用"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_fff"
                />

            <TextView
                android:id="@+id/enabled"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="0.9"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:layout_margin="@dimen/dp_5"
                android:drawableRight="@drawable/more"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingRight="@dimen/dp_5"
                android:text="禁用"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:padding="@dimen/dp_2"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:text="触发值"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_fff"
                />

            <EditText
                android:id="@+id/input_num"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:clickable="true"
                android:inputType="number"
                android:hint="输入触发值"
                android:textColorHint="@color/white1"
                android:textStyle="bold"
                android:background="@color/color_10AEFF"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:paddingRight="@dimen/dp_5"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="触发方式"
                android:textColor="@color/color_fff"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:id="@+id/event_way"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:text="选择触发方式"
                android:drawableRight="@drawable/more"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:padding="@dimen/dp_2"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="触发类别 "
                android:textColor="@color/color_fff"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:id="@+id/event_type"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/save_click_selector"
                android:clickable="true"
                android:drawableRight="@drawable/more"
                android:text="点击选择触发类别"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/add_dev_condition"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="0.6"
                android:background="@color/color_8AB928"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:text="添加设备"
                android:textStyle="bold"
                android:textColor="@color/white1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:orientation="vertical"
        android:layout_weight="3">

        <GridView
            android:id="@+id/gridView_condition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:clipToPadding="true"
            android:horizontalSpacing="@dimen/dp_10"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dp_10" />
        <LinearLayout
            android:id="@+id/add_dev_Layout_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1.5"
            android:background="@color/color_DCDCDC"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="未添加设备列表"
                android:textColor="@color/color_898C92"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="设备房间"
                    android:textColor="@color/color_898C92"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_equipment_parlour"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/save_click_selector"
                    android:drawableRight="@drawable/more"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <ListView
                android:id="@+id/equipment_loyout_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"></ListView>

            <TextView
                android:id="@+id/equipment_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_click_selector"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
