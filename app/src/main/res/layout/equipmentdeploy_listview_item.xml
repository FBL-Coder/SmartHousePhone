<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@color/color_EEEEDE"
    android:orientation="horizontal"
    android:padding="@dimen/dp_5">


    <ImageView
        android:id="@+id/Dev_select_iv"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="1"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:src="@drawable/select_ok" />


    <ImageView
        android:id="@+id/Dev_iv"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="1"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:src="@drawable/dengguan" />

    <TextView
        android:id="@+id/Dev_tv_Name"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_15"
        android:clickable="true"
        android:gravity="center"
        android:text="测试一下"
        android:textColor="@color/color_000"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/Dev_tv_CMD"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1.5"
        android:background="@drawable/save_click_selector"
        android:clickable="true"
        android:drawableRight="@drawable/more"
        android:gravity="center"
        android:paddingRight="@dimen/dp_5"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/sp_16" />
</LinearLayout>
