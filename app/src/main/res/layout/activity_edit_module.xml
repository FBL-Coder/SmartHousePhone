<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_viewpager"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_weight="0.5"
        android:background="@color/color_33ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:text="名称"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_fff"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/white1"
            android:background="@color/color_10AEFF"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/color_fff"
            android:padding="@dimen/dp_5" />
        <TextView
            android:id="@+id/save"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="0.6"
            android:background="@color/color_8AB928"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="@color/color_fff"
            android:text="保存"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_weight="0.5"
        android:background="@color/color_33ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text="所属房间"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_fff"/>
        <TextView
            android:id="@+id/room"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="0.6"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:layout_margin="@dimen/dp_5"
            android:drawableRight="@drawable/more"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text="按键数目"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_fff"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="0.6"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:layout_margin="@dimen/dp_5"
            android:drawableRight="@drawable/more"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_weight="0.5"
        android:background="@color/color_33ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text="按键形式"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_fff"/>
        <TextView
            android:id="@+id/style"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="0.6"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:layout_margin="@dimen/dp_5"
            android:drawableRight="@drawable/more"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text="按键背光"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_fff"/>

        <TextView
            android:id="@+id/backlight"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="0.6"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:layout_margin="@dimen/dp_5"
            android:drawableRight="@drawable/more"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:orientation="vertical"
        android:layout_weight="4">

        <GridView
            android:id="@+id/gridView_key"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            android:clipToPadding="true"
            android:horizontalSpacing="@dimen/dp_10"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dp_10" />
        <LinearLayout
            android:id="@+id/add_dev_Layout_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1.5"
            android:background="@color/color_DCDCDC"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="未添加设备列表"
                android:textColor="@color/color_898C92"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="设备房间"
                    android:textColor="@color/color_898C92"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_equipment_parlour"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/save_click_selector"
                    android:drawableRight="@drawable/more"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <ListView
                android:id="@+id/equipment_loyout_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"></ListView>

            <TextView
                android:id="@+id/equipment_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_click_selector"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>