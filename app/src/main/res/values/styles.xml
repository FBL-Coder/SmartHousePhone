<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--底边栏的样式-->
    <style name="BottomRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/dp_0</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="android:textColor">@color/color_home_text</item>
    </style>
    <!--自定义dialog的样式-->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/color_fff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--dialog_normal_layout中Button的样式-->
    <style name="DialogButtonStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_dialog_btn</item>
        <item name="android:textColor">@color/color_565656</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <!--GridView的样式-->
    <style name="GridViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:numColumns">3</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--模块列表的样式-->
    <style name="ModuleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:background">@drawable/tiao</item>
        <item name="android:drawableLeft">@drawable/liebiao</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_88222223</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
    <!--组合设置RadioButton的样式-->
    <style name="GroupRadioButtonStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/color_10AEFF</item>
        <item name="android:textColor">@color/color_group_text</item>
        <item name="android:drawableTop">@drawable/selector_group_output</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
